<% include ../partials/header.ejs %> 
<div class="container">
  <header class="jumbotron">
      <h1>Welcome to the campgrounds!</h1>
      <p>Check out our list of handpicked campgrounds</p>
      <% if(currentUser) { %>
        <a class="btn btn-sm btn-dark" href="/campgrounds/new">add a new campground</a>
      <% } %>
  </header>
  
  
  <div class="row text-center">
    <% for(var i=0; i<camps.length; i++) { %>
      <div class="col-md-3 col-sm-6">
        <div class="img-thumbnail"> 
          <img class="img-fluid" src='<%= camps[i].image %>'>
          <div class="caption"><h4><%= camps[i].name %></h4></div>
          <p><a class="btn btn-sm btn-primary" href="/campgrounds/<%= camps[i].id %>">More Info</a></p>
        </div>
      </div>
    <% } %>
  </div>
  

</div>


<% include ../partials/footer.ejs %> 
